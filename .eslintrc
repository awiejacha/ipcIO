{
  "extends": [
    "standard"
  ],
  "rules": {
    "quotes": [2,"double","avoid-escape"],
    "no-constant-condition": 1,
    "no-control-regex": 1,
    "no-debugger": 1,
    "no-dupe-args": 1,
    "strict": [
      1,
      "global"
    ],
    "comma-dangle": [
      2,
      "always-multiline"
    ],
    "semi": [
      2,
      "always"
    ],
    "camelcase": 0,
    "space-before-function-paren": 0,
    "brace-style": 0,
    "padded-blocks": 0
  }
}
